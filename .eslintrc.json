{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "semi": ["error", "always"], 
        "quotes": ["error", "double"],  
        "indent": ["error", 2],         
        "comma-dangle": ["error", "always-multiline"], 
        "no-unused-vars": "warn",  
        "no-console": "off" 
    }
}